{
    "compilerOptions": {
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "types": [
            "../typedefs/filesystem",
            "../typedefs/filewriter",
            "../typedefs/browser",
            "../typedefs/biginteger",
            "../typedefs/dollar-polyfill",
            "../typedefs/common"
        ],
        "moduleResolution": "node",
        "noImplicitThis": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
