{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "gulp",
    "args": [
        "--no-color"
    ],
    "options": {
        "cwd": "${workspaceRoot}"
    },
"tasks": [
    {
        "label": "lint:ts",
        "type": "gulp",
        "task": "--no-color",
        "problemMatcher": "$eslint-stylish"
    },
    {
        "label": "build",
        "type": "gulp",
        "task": "--no-color",
        "problemMatcher": "$tsc",
        "group": {
            "_id": "build",
            "isDefault": false
        }
    },
    {
        "label": "watch",
        "type": "gulp",
        "task": "--no-color",
        "isBackground": true,
        "problemMatcher": []
    }
]
}
