{
    "compilerOptions": {
        "baseUrl": ".",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES2020",
        "lib": ["DOM", "ESNext", "DOM.Iterable"],
        "esModuleInterop": true,
        "incremental": false,
        "skipLibCheck": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots" : ["src/typedefs", "node_modules/@types", "./node_modules"],
        "moduleResolution": "bundler", // nodenext
        "noImplicitThis": true,
        // "verbatimModuleSyntax": true, //TODO:f: test if this works and remove isolatedModules if it does
        "isolatedModules": true,
        //"allowImportingTsExtensions": true,
        "types": [
            "vite/client",
            "unplugin-icons/types/vue",
            "chrome"
        ],
        "module": "ESNext",
        "paths": {
        "~/*": ["src/*"]
        }
    },
    // "include": [
    //     "**/*"
    // ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ]
}
