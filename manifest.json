{
    "manifest_version": 2,
    "name": "Kee",
    "default_locale": "en",
    "version": "2.0.0.18",
    "version_name": "2.0.0 alpha 18",
    "author": "Chris Tomlinson",
    "description": "Simple and secure password management. Login automatically, never forget another password and stay in control.",
    "background": {
        "scripts": [
            "common/dollar-polyfill.js",
            "common/browser-polyfill.js",
            "common/punycode.js",
            "common/pslData.js",
            "common/publicsuffixlist.js",
            "common.js",
            "background/biginteger.js",
            "app.js"
        ],
        "persistent": true
    },
    "content_scripts": [{
        "all_frames": true,
        "matches": ["<all_urls>"],
        "js": [
                "common/dollar-polyfill.js",
                "common/browser-polyfill.js",
                "common/punycode.js",
                "common/pslData.js",
                "common/publicsuffixlist.js",
                "common.js",
                "page.js"
        ],
        "run_at": "document_end"
    }],
    "icons": {
        "16": "common/images/16.png",
        "32": "common/images/32.png",
        "48": "common/images/48.png",
        "64": "common/images/64.png",
        "96": "common/images/96.png",
        "128": "common/images/128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "common/images/16.png",
            "32": "common/images/32.png",
            "48": "common/images/48.png",
            "64": "common/images/64.png"
        },
        "default_title": "Kee",
        "default_popup": "popup/popup.html"
    },
    "options_ui": {
        "page": "settings/settings.html"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "storage",
        "clipboardWrite",
        "clipboardRead",
        "webNavigation",
        "activeTab",
        "privacy",
        "webRequestBlocking",
        "webRequest",
        "<all_urls>"
    ],
    "web_accessible_resources" : [
		"panels/*"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+1"
            }
        },
        "primary-action": {
            "suggested_key": {
                "default": "Ctrl+Shift+2"
            },
            "description": "__MSG_KB_shortcut_simple_2_desc__"
        },
        "generate-password": {
            "suggested_key": {
                "default": "Ctrl+Shift+4"
            },
            "description": "__MSG_Menu_Button_copyNewPasswordToClipboard_label__"
        },
        "detect-forms": {
            "suggested_key": {
                "default": "Ctrl+Shift+6"
            },
            "description": "__MSG_Menu_Button_fillCurrentDocument_label__"
        }
    }
}
